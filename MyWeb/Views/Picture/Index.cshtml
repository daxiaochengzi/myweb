
@{
    Layout = null;
}

<!DOCTYPE html>

<html>

<head>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/dist/js/bootstrap-table/bootstrap-table.js"></script>
    <link href="~/lib/bootstrap/dist/js/bootstrap-table/bootstrap-table.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/dist/js/bootstrap-table/locale/bootstrap-table-zh-CN.js"></script>
    <script src="~/lib/bootstrap/dist/js/home.js"></script>
    <script src="~/lib/bootstrap/dist/js/respond.min.js"></script>
    <link href="~/lib/bootstrap/dist/js/toastr.min.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/dist/js/toastr.min.js"></script>
    <script>
    $(document).ready(function () {
     
        $("#btn_fileUpload").click(function () {
            Btn_Click();
        });
            $("#btn_saveInfo").click(function () {

                var saveData = {
                    UserName: $("#UserName").val(),
                    Phone: $("#Phone").val(),
                    Address: $("#P_Address").val(),
                    MakeRoomTime: $("#P_MakeRoomTime").val(),
                    SellingPoint: $("#P_SellingPoint").val(),
                    RoomNumber: $("#P_RoomNumber").val(),
                    Price: $("#P_Price").val(),
                    AllPrice: $("#P_AllPrice").val(),
                    Areas: $("#P_Areas").val(),
                    Apartment: $("#P_Apartment").val(),
                    Remark: $("#P_Remark").val(),
                }
                console.log(JSON.stringify(saveData));
                $.ajax({
                    type: "POST",
                    url: "/Picture/Create",
                    contentType: "application/json; charset=utf-8", //必须有
                    dataType: "json", //表示返回值类型，不必须
                    data: JSON.stringify(saveData),
                    success: function (data) {
                        toastr.success(data);
                        $("#tb_departments").bootstrapTable('refresh');
                    },
                    error: function () {
                    }
                });
            });

            //end click
        })
    </script>
    <script type="text/javascript">
        toastr.options.positionClass = 'toast-top-center';
    </script>

</head>


<body>
<container>
 
    <form class="form-inline" style="padding-left: 20px;padding-top: 50px;" >
        <div class="form-group">
            <label for="UserName" >客户姓名:</label>
            <input type="text" class="form-control" style="margin-left:  5px" id="UserName"  placeholder="客户姓名">
        </div>
        <div class="form-group" style="margin-left:  10px">
            <label for="phone">电话:</label>
            <input type="text"  class="form-control" style="margin-left: 5px" id="Phone" placeholder="电话">
        </div>
        <div class="form-group" style="margin-left:  10px">
            <label for="P_Address">地址:</label>
            <input type="text"  class="form-control" style="margin-left: 5px" id="P_Address" placeholder="地址">
        </div>
        <div class="form-group" style="margin-left:  10px">
            <label for="P_MakeRoomTime">交房时间:</label>
            <input type="text"  class="form-control" style="margin-left: 5px" id="P_MakeRoomTime" placeholder="交房时间">
        </div>
        <div class="form-group" style="margin-left:  10px">
            <label for="P_SellingPoint">楼盘:</label>
            <input type="text"  class="form-control" style="margin-left: 5px" id="P_SellingPoint" placeholder="楼盘">
        </div>
        <div class="form-group" style="margin-left:  10px">
            <label for="P_RoomNumber">房号:</label>
            <input type="text"  class="form-control" style="margin-left: 5px" id="P_RoomNumber" placeholder="房号">
        </div>
        <div class="form-group" style="margin-left:  10px">
            <label for="P_Price">单价:</label>
            <input type="text"  class="form-control" style="margin-left: 5px" id="P_Price" placeholder="单价">
        </div>
        <div class="form-group" style="margin-left:  10px">
            <label for="P_AllPrice">总价:</label>
            <input type="text"  class="form-control" style="margin-left: 5px" id="P_AllPrice" placeholder="总价">
        </div>
        <div class="form-group" style="margin-left:  10px">
            <label for="P_Areas">面积:</label>
            <input type="text"  class="form-control" style="margin-left: 5px" id="P_Areas" placeholder="面积">
        </div>
        <div class="form-group" style="margin-left:  10px">
            <label for="P_Apartment">户型:</label>
            <input type="text"  class="form-control" style="margin-left: 5px" id="P_Apartment" placeholder="户型">
        </div>
  
    </form>
    <form class="form-inline" style="padding-left: 20px;padding-top: 10px;">
          <div class="form-group">
              <label for="P_Remark">备注:</label>
        <textarea class="form-control" rows="3" placeholder="备注" id="P_Remark" with="200px"  ></textarea>
    </div>
    </form>
   
    <div style="padding-top: 15px">
        <button type="button" style="margin-left:20px" id="btn_saveInfo" class="btn btn-primary">保存</button>
    </div>
    <container >
        <div  id="uploadForm" style="padding-left: 20px;padding-top: 10px;display: none;">
        <form  enctype="multipart/form-data" style="padding-top: 20px">
            <div><input type="file" id="files" name="files" placeholder="file" multiple><input type="button" id="btn_fileUpload" value="上传"></div>
        </form>
        </div>
    </container>
</container>
<container>
    <div class="panel-body" style="padding-bottom:0px;padding-left: 20px;padding-top: 10px;">
        <form class="form-inline" style="padding-left: 20px;padding-top: 50px;">
            <div class="form-group">
                <label for="t_UserName">客户姓名:</label>
                <input type="text" class="form-control" style="margin-left:  5px" id="t_UserName" placeholder="客户姓名">
            </div>
            <div class="form-group" style="margin-left:  10px">
                <label for="t_Apartment">户型:</label>
                <input type="text" class="form-control" style="margin-left: 5px" id="t_Apartment" placeholder="户型">
            </div>
            <div class="form-group" style="margin-left:  10px">
                <label for="t_Address">地址:</label>
                <input type="text" class="form-control" style="margin-left: 5px" id="t_Address" placeholder="地址">
            </div>
            <button type="button" style="margin-left:50px" id="btn_query" class="btn btn-primary">查询</button>
        </form>
        <div id="toolbar" class="btn-group">
            <button id="btn_edit" type="button" class="btn btn-default">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>上传图片
            </button>
            <button id="btn_delete" type="button" class="btn btn-default">
                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>删除
            </button>
        </div>
        <table id="tb_departments"  class="table table-bordered"></table>
    </div>
</container>
</body>
</html>
